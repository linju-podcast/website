---
interface Props {
  name: string
  url?: string
}

const { name, url } = Astro.props

const borderConfig = {
  devTips: 'border-amber-400',
  nostalgia: 'border-red-400',
  englishLearnings: 'border-blue-400',
  special: 'border-emerald-400'
}

const textConfig = {
  devTips: 'text-amber-400',
  nostalgia: 'text-red-400',
  englishLearnings: 'text-blue-400',
  special: 'text-emerald-400'
}

const bgConfig = {
  devTips: 'hover:bg-amber-400',
  nostalgia: 'hover:bg-red-400',
  englishLearnings: 'hover:bg-blue-400',
  special: 'hover:bg-emerald-400'
}

const darkBgConfig = {
  devTips: 'dark:hover:bg-amber-400',
  nostalgia: 'dark:hover:bg-red-400',
  englishLearnings: 'dark:hover:bg-blue-400',
  special: 'dark:hover:bg-emerald-400'
}
---

<a
  href={url}
  class:list={[
    'px-2 h-6 border rounded-md group shadow-md transition duration-300 ease-in-out bg-white dark:bg-neutral-800',
    `${borderConfig[name]}`,
    `${bgConfig[name]}`,
    `${darkBgConfig[name]}`
  ]}
>
  <span
    class:list={[
      `${textConfig[name]}`,
      'group hover:text-white dark:hover:text-neutral-800'
    ]}
  >
    {name}
  </span>
</a>
